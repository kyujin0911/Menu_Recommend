<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/random_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9CD34">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/title"
        android:elevation="4dp"
        android:gravity="center"
        android:text="선호하는 음식 체크"
        android:textColor="@color/black"></TextView>

    <ImageView
        android:id="@+id/rectangle_6"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/checkbox_rec"
        android:elevation="4dp"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_6"
        android:layout_alignRight="@+id/rectangle_6"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/reviewtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(리뷰수)"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_24"/>
        <TextView
            android:id="@+id/startextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "별점"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_random"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_below="@+id/rectangle_6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/img"
        android:text="여기를 누르세요!"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:elevation="4dp"></Button>

    <Button
        android:id="@+id/goToNavermap_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_random"
        android:layout_alignRight="@+id/btn_random"
        android:layout_marginTop="10dp"
        android:background="@drawable/group_18"></Button>

